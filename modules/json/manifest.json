{
  "manifest_version": 2,
  "name": "Bättre Nyheter",
  "version": "1.0.0",

  "description": "Gör Aftonbladet.se till en bättre nyhetssida.",

  "options_ui": {
    "page": "popup.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "assets/images/icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.aftonbladet.se/"],
      "js": ["assets/js/inject.min.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "http://www.aftonbladet.se/"
  ],
  "web_accessible_resources": [
    "assets/js/inject.min.js",
    "assets/json/testData.min.json"
  ]
}